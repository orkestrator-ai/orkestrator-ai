{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Orkestrator AI",
  "version": "0.1.7",
  "identifier": "com.orkestrator-ai",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build:all",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Orkestrator AI",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../docker/claude-bridge/dist": "claude-bridge/dist",
      "../docker/claude-bridge/package.json": "claude-bridge/package.json",
      "../docker/claude-bridge/node_modules": "claude-bridge/node_modules",
      "../binaries/bun": "bin/bun"
    }
  }
}
